<Window x:Class="Take_Away_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Take_Away_Client.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ListView x:Name="ProductGrid" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Products, Mode=TwoWay}" SelectedItem="{Binding SelectedProduct}" Margin="10">
        <ListView.View>
            <GridView x:Name="gridAllProducts">
                <GridViewColumn Header="Product name" DisplayMemberBinding="{Binding productName}" Width="100"/>
                <GridViewColumn Header="Product price" DisplayMemberBinding="{Binding productPrice}" Width="100"/>
                <GridViewColumn Header="Product type" DisplayMemberBinding="{Binding productType}" Width="100"/>
            </GridView>
        </ListView.View>
    </ListView>

</Window>
